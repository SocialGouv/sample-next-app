#!/usr/bin/env bash
set -e

if [ -z "$1" ]; then
  echo "Missing required argument 1 secret name"
  exit 1
fi
if [ -z "$2" ]; then
  echo "Missing required argument 2 source namespace"
  exit 1
fi
if [ -z "$3" ]; then
  echo "Missing required argument 3 target namespace"
  exit 1
fi

kubectl get secret "$1" --namespace="$2" -o yaml \
  | sed 's/namespace: .*//' \
  | kubectl -n "$3" apply -f -
